<p style="color: green"><%= notice %></p>

<h1>Perform realtime search</h1>
<%=form_with(url: activities_path, method: :get, data: {controller: "search-form", turbo_frame: "activities", turbo_action: "advance"}) do |form|%>
  <%=form.label :query, "Search by activity name"%>
    <%=form.text_field :query, data: {action: "input -> search-form#search"}%>
    <%=form.submit "Search", style: "background-color: pink; cursor: pointer; color: blue; border: none; padding: 4px; font-weight: bold"%>
<%end%><br>

<div class="new-activity">
<%= link_to "Create new search phrase", new_activity_path %>
</div>
<h1 class="search-result">Search Analytics</h1>
<div id="activities">
<%=render "activities", activities: @activities%> 
</div>
